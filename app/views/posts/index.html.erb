<section>
  <h4 class="text-center mt-4 mb-2 pt-2 pb-2">Recent Posts</h4>
  <%= form_with model: @post, local: false do |form| %>
    <div class="container my-2 py-5">
      <div class="row d-flex justify-content-center">
        <div class="col-md-12 col-lg-10 col-xl-8">
          <div class="card">
            <div class="card-body p-4">
              <div class="row">
                <div class="col">
                  <div class="d-flex flex-start w-100 mt-4">
                    <img class="rounded-circle shadow-1-strong me-3"
                      src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="40"
                      height="40" />
                    <div class="form-outline w-100">
                        <%= form.text_field :body, placeholder: "What's on your mind, #{current_user.first_name}?", class: "form-control", style: "background: #fff;" %>
                    </div>
                  </div>
                  <div class="float-end mt-2 pt-1">
                    <%= form.submit "Post", class: "btn btn-primary btn-sm" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>

<%# Displays recent posts from friends %>

<section>
  <div class="container my-2 py-5">
    <div class="row d-flex justify-content-center gap-5">
      <% @posts.each do |post| %>
        <div class="col-md-12 col-lg-10 col-xl-8" id="post-display">
          <div class="card">
            <div class="card-body">
              <div class="d-flex flex-start align-items-center">
                <img class="rounded-circle shadow-1-strong me-3"
                  src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="60"
                  height="60" />
                <div>
                  <h6 class="fw-bold text-primary mb-1"><%= post.author.full_name %></h6>
                  <p class="text-muted small mb-0">
                    Shared publicly - <%= time_ago_in_words(post.created_at) %> ago
                  </p>
                </div>
              </div>

              <p class="mt-3 mb-4 pb-2">
                <%= post.body %>
              </p>

              <div class="small d-flex justify-content-start">
                <a href="#!" class="d-flex align-items-center me-3">
                  <i class="far fa-thumbs-up me-2"></i>
                  <p class="mb-0">Like</p>
                </a>
                <a href="#!" class="d-flex align-items-center me-3">
                  <i class="far fa-comment-dots me-2"></i>
                  <p class="mb-0">Comment</p>
                </a>
                <a href="#!" class="d-flex align-items-center me-3">
                  <i class="fas fa-share me-2"></i>
                  <p class="mb-0">Share</p>
                </a>
              </div>
            </div>

            <%# COMMENTS SECTION %>

            <% post.comments.each do |comment| %>
              <div class="d-flex flex-start mt-4">
                <a class="me-3" href="#">
                  <img class="rounded-circle shadow-1-strong"
                    src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(11).webp" alt="avatar"
                    width="65" height="65" />
                </a>
                <div class="flex-grow-1 flex-shrink-1">
                  <div>
                    <div class="d-flex justify-content-between align-items-center">
                      <p class="mb-1">
                        <%= comment.commenter %> <span class="small"><%= time_ago_in_words(post.created_at) %> ago</span>
                      </p>
                    </div>
                    <p class="small mb-0">
                      <%= comment.inspect %>
                    </p>
                  </div>
                </div>
              </div>
            <% end %>

            <%= form_with model: post do |form| %>
              <div class="card-footer my-2 py-3 border-0" style="background-color: #f8f9fa;">
                <div class="d-flex flex-start w-100">
                  <img class="rounded-circle shadow-1-strong me-3"
                    src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="40"
                    height="40" />
                  <div class="form-outline w-100 my-2">
                    <%= form.fields_for :comments do |comment_f| %>
                      <%= comment_f.text_field :body, placeholder: 'Write a comment...', class: "form-control", style: "background: #fff;" %>
                    <% end %>
                  </div>
                </div>
                <div class="float-end mt-2 py-2">
                  <%= form.submit "Post comment", class: "btn btn-primary btn-sm my-2" %>
                  <button type="button" class="btn btn-outline-primary btn-sm my-2">Cancel</button>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>


<% post.comments.each do |comment| %>
  <div class="d-flex flex-start mt-4">
    <a class="me-3" href="#">
      <img class="rounded-circle shadow-1-strong"
        src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(11).webp" alt="avatar"
        width="65" height="65" />
    </a>
    <div class="flex-grow-1 flex-shrink-1">
      <div>
        <%= render "comments/heading", comment: comment, post: post %>

        <%= render "comments/body", comment: comment, post: post %>

        <%= render "comments/footer", comment: comment, post: post %>
      </div>
    </div>
  </div>
<% end %>
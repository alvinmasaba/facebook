<% post.comments.each do |comment| %>
  <div class="d-flex flex-start mt-4 px-2">
    <%= image_tag current_user.gravatar_url, :alt => "avatar", :class => "rounded-circle shadow-1-strong", :style => "width: 60px; height: 60px" %>
    <div class="flex-grow-1 flex-shrink-1 px-2">
      <div>
        <%= render "comments/heading", comment: comment, post: post %>

        <%= render "comments/body", comment: comment, post: post %>

        <%= render "comments/footer", comment: comment, post: post %>
      </div>
    </div>
  </div>
<% end %>
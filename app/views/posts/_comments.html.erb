<% post.comments.each do |comment| %>
  <div class="d-flex flex-start mt-4">
    <a class="me-3" href="#">
      <img class="rounded-circle shadow-1-strong"
        src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(11).webp" alt="avatar"
        width="65" height="65" />
    </a>
    <div class="flex-grow-1 flex-shrink-1">
      <div>
        <div class="d-flex justify-content-between align-items-center">
          <p class="mb-1">
            <%= comment.commenter.full_name %> <span class="small"><%= time_ago_in_words(post.created_at) %> ago</span>
          </p>
          <span class="small">
            <% if comment.commenter == current_user %>
              <%= link_to "Delete", post_comment_path(post, comment), data: { "turbo-method": :delete }, class: "mb-0" %>
            <% end %>
          </span>
        </div>
        <p class="small mb-0">
          <%= comment.body %>
        </p>
      </div>
    </div>
  </div>
<% end %>
<h2>Sent Requests</h2>

<ol>
  <% @sent_requests.each do |request| %>
    <li><%= link_to "#{request.recipient.full_name}", request.recipient %>, <p>Request Pending...</p> 
    <%= button_to "Remove Friend Request", friend_request_path(request), method: :delete %></li>
  <% end %>
</ol>

<h2>Received Requests</h2>

<ol>
  <% @received_requests.each do |request| %>
    <%= link_to "#{request.sender.full_name}", request.sender %> 
    <%= render "friendships/form", friendship: Friendship.new, friend_id: request.sender.id %>
  <% end %>
</ol>

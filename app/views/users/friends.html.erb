<h3>Friends:</h3>

<ol>
  <% @friends.each do |friend| %>
    <li><%= link_to "#{friend.full_name}", friend %> 
    
    <% if current_user == @user %>
      <%= link_to "Click to Unfriend", friendship_path(current_user.find_friendship(friend)), 
                                                                data: {
                                                                  turbo_method: :delete,
                                                                  turbo_confirm: "Are you sure?"
                                                                } %></li>
    <% end %>
  <% end %>
</ol>

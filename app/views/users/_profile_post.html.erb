<section>
  <%= form_with model: @post, local: false do |form| %>
    <div class="container my-2 py-5">
      <div class="row d-flex justify-content-center">
        <div class="col-md-12 col-lg-10 col-xl-8">
          <div class="card">
            <div class="card-body p-4">
              <div class="row">
                <div class="col">
                  <div class="d-flex flex-start w-100 mt-4">
                    <%= image_tag @user.gravatar_url, :alt => "avatar", :class => "rounded-circle shadow-1-strong me-3", :style => "width:40px; height:40px" %>
                    <div class="form-outline w-100">
                        <%= form.text_field :body, placeholder: "Say hi to #{user.first_name}!", class: "form-control", style: "background: #fff;" %>
                        <%= form.hidden_field :user_id, value: user.id %>
                        <%= form.hidden_field :author_id, value: current_user.id %>
                    </div>
                  </div>
                  <div class="float-end mt-2 pt-1">
                    <%= form.submit "Post", class: "btn btn-primary btn-sm" %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</section>